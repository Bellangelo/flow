<div>
    <h1 class="hidden lg:block">
        Examples
    </h1>
    <div class="lg:hidden p-2 text-center">
        <button class="font-bold text-xl" aria-controls="documentation-examples" data-collapse-toggle="documentation-examples">
            Examples

            <svg class="w-3 h-3 ml-2 inline" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
            </svg>
        </button>
    </div>
    <div id="documentation-examples" class="hidden lg:block">
        <ul>
        {% for topic in examples.topics %}
            <li>
                <button class="link" aria-controls="dropdown-example" data-collapse-toggle="dropdown-example-{{ topic }}">
                    {{ topic|humanize }}
                    <svg class="w-3 h-3 ml-2 inline" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                    </svg>
                </button>
                <ul id="dropdown-example-{{ topic }}" class="hidden">
                    {% for example in examples.examples(topic) %}
                        <li>
                            <a href="{{ path('documentation_example', {topic: topic, example: example}) }}#example">{{ example|humanize }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
        </ul>
    </div>
</div>
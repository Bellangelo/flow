{% extends 'base.html.twig' %}

{%- block title -%}
    {{ page.title }} - Flow PHP - Data Processing Framework
{%- endblock -%}

{%- block description -%}
    {{ page.description }}
{%- endblock -%}

{%- block hero -%}
{% endblock %}

{% block main %}
<section id="documentation-page" class="mt-5 mb-5 sm:px-4 mx-auto max-w-screen-xl">
    <div class="grid grid-cols-1 lg:grid-cols-6">
        <div class="order-1 lg:order-0 lg:col-span-1 lg:sticky lg:top-0 lg:max-h-screen lg:overflow-y-auto">
            {{ render(controller('Flow\\Website\\Controller\\DocumentationController::navigation')) }}
        </div>
        <div class="order-3 lg:order-1 lg:col-span-4 p-2">
            <hr class="lg:hidden"/>
            {{ page.content|markdown_to_html }}

            <hr class="!mt-8 !mb-8"/>

            <script src="https://giscus.app/client.js"
                    data-repo="flow-php/flow-php.com"
                    data-repo-id="R_kgDOHja2Yg"
                    data-category="Documentation"
                    data-category-id="DIC_kwDOHja2Ys4Cidc1"
                    data-mapping="url"
                    data-strict="0"
                    data-reactions-enabled="0"
                    data-emit-metadata="0"
                    data-input-position="bottom"
                    data-theme="dark"
                    data-lang="en"
                    crossorigin="anonymous"
                    async>
            </script>
        </div>
        <div class="order-2 lg:order-2 col-span-1 lg:col-span-1 lg:sticky lg:top-0 lg:max-h-screen lg:overflow-y-auto">
            {{ render(controller('Flow\\Website\\Controller\\DocumentationController::examples')) }}
        </div>
    </div>
</section>
{% endblock %}